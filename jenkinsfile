pipeline {
    agent any

    tools {
        // Asegúrate de reemplazar 'my-jdk-name' con el nombre de la configuración de JDK que has definido en Jenkins
        jdk 'jdk17'
    }

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/Svandze/Eress-Automation.git'
            }
        }

        stage('Build') {
            steps {
                bat 'mvn clean install'
            }
        }

        stage('Test') {
            steps {
                bat 'mvn test'
            }
        }
    }

    post {
        success {
            echo '¡Successful build!'
        }
        failure {
            echo 'Failure. Please review the build logs for details'
        }
    }
}
